{% extends 'AdminBundle::admin.html.twig' %} {% block title %}Product
Management {% endblock %} {% block name %}
<div id="title-breadcrumb-option-demo" class="page-title-breadcrumb">
	<div class="page-header pull-left">
		<div class="page-title">
			<i class="btn btn-primary" data-target="#modal-config"
				data-toggle="modal">New Product</i>
		</div>
	</div>
	<ol class="breadcrumb page-breadcrumb pull-right">
		<li><i class="fa fa-home"></i>&nbsp;<a
			href="{{ url('admin_homepage') }}">Home</a>&nbsp;&nbsp;<i
			class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
		<li class="hidden"><a href="#">Product</a>&nbsp;&nbsp;<i
			class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
		<li class="active">Product</li>
	</ol>
	<div class="clearfix"></div>
</div>
{% endblock %} {% block modal %}
<!--BEGIN MODAL CONFIG PORTLET-->
<div id="modal-config" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" data-dismiss="modal" aria-hidden="true"
					class="close">&times;</button>
				<h4 class="modal-title">Add New Product</h4>
			</div>
			<div class="modal-body">
				<div class="panel-body pan">
					<form action="{{ url('admin_insertProduct') }}"
						class="form-horizontal" method="post">
						<div class="form-body pal">
							<div class="form-group">
								<label for="inputCode" class="col-md-3 control-label"> Product
									Code</label>
								<div class="col-md-9">
									<div class="input-icon right">
										<input id="inputCode" type="text" name="inputCode"
											placeholder="" class="form-control" />
									</div>
								</div>
							</div>
							<div class="form-group">
								<label for="inputName" class="col-md-3 control-label"> Product
									Name</label>
								<div class="col-md-9">
									<div class="input-icon right">
										<input id="inputName" type="text" name="inputName"
											placeholder="" class="form-control" />
									</div>
								</div>
							</div>
							<div class="form-group">
								<label for="inputDesc" class="col-md-3 control-label">
									Description</label>
								<div class="col-md-9">
									<div class="input-icon right">
										<textarea id="inputDesc" rows="5" placeholder=""
											name="inputDesc" class="form-control"></textarea>
									</div>
								</div>
							</div>
							<div class="form-group">
								<label for="inputStat" class="col-md-3 control-label"> Product
									Status</label>
								<div class="col-md-9">
									<div class="input-icon right">
										<input id="inputStat" type="text" name="inputStat"
											placeholder="" class="form-control" />
									</div>
								</div>
							</div>
							<div class="form-group">
								<label for="inputBrand" class="col-md-3 control-label"> Product
									Brand</label>
								<div class="col-md-9">
									<div class="input-icon right">
										<input id="inputBrand" type="text" name="inputBrand"
											placeholder="" class="form-control" />
									</div>
								</div>
							</div>
							<div class="form-group">
								<label for="inputMade" class="col-md-3 control-label"> Made in</label>
								<div class="col-md-9">
									<div class="input-icon right">
										<input id="inputMade" type="text" name="inputMade"
											placeholder="" class="form-control" />
									</div>
								</div>
							</div>
							<div class="form-group">
								<label for="inputPrice" class="col-md-3 control-label"> Product
									Price</label>
								<div class="col-md-9">
									<div class="input-icon right">
										<input id="inputPrice" type="text" name="inputPrice"
											placeholder="" class="form-control" />
									</div>
								</div>
							</div>
							<div class="form-group">
								<label for="inputImg" class="col-md-3 control-label"> Product
									Image</label>
								<div class="col-md-9">
									<div class="input-icon right">
										<input id="inputImg" type="text" name="inputImg"
											placeholder="" class="form-control" />
									</div>
								</div>
							</div>
							<div class="modal-footer">
								<button type="button" data-dismiss="modal"
									class="btn btn-default">Close</button>
								<input type="submit" class="btn btn-primary" name="submit"
									value="Add New Product" />
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
<!--END MODAL CONFIG PORTLET-->
{% endblock %} {% block body %}
<div class="col-lg-6">
	<div class="panel-body pan"></div>
</div>
<div id="tab-general">
	<div class="row mbl">
		<div class="col-lg-12">
			<div class="col-md-12">
				<div id="area-chart-spline"
					style="width: 100%; height: 300px; display: none;"></div>
			</div>
		</div>
		<div class="col-lg-12">
			<div class="page-content">
				<div class="row">
					<div class="col-lg-12">
						<div class="panel">
							<div class="panel-body">
								<div id="grid-layout-table-1" class="box jplist">
									<div class="jplist-ios-button">
										<i class="fa fa-sort"></i>Actions
									</div>
									<div class="jplist-panel box panel-top">
										<button type="button" data-control-type="reset"
											data-control-name="reset" data-control-action="reset"
											class="jplist-reset-btn btn btn-default">
											Reset<i class="fa fa-share mls"></i>
										</button>
										<div data-control-type="drop-down" data-control-name="paging"
											data-control-action="paging"
											class="jplist-drop-down form-control">
											<ul class="dropdown-menu">
												<li><span data-number="3"> 3 per page</span></li>
												<li><span data-number="5"> 5 per page</span></li>
												<li><span data-number="10" data-default="true"> 10 per page</span></li>
												<li><span data-number="all"> view all</span></li>
											</ul>
										</div>
										<div data-control-type="drop-down" data-control-name="sort"
											data-control-action="sort" data-datetime-format="{
											month}/{day}/{year}" class="jplist-drop-down form-control">
											<ul class="dropdown-menu">
												<li><span data-path="default">Sort by</span></li>
												<li><span data-path=".title" data-order="asc"
													data-type="text">Name A-Z</span></li>
												<li><span data-path=".title" data-order="desc"
													data-type="text">Name Z-A</span></li>
												<li><span data-path=".desc" data-order="asc"
													data-type="text">Description A-Z</span></li>
												<li><span data-path=".desc" data-order="desc"
													data-type="text">Description Z-A</span></li>
											</ul>
										</div>
										<div class="text-filter-box">
											<div class="input-group">
												<span class="input-group-addon"><i class="fa fa-search"></i></span><input
													data-path=".title" type="text" value=""
													placeholder="Filter by Name" data-control-type="textbox"
													data-control-name="title-filter"
													data-control-action="filter" class="form-control" />
											</div>
										</div>
										<div class="text-filter-box">
											<div class="input-group">
												<span class="input-group-addon"><i class="fa fa-search"></i></span><input
													data-path=".desc" type="text" value=""
													placeholder="Filter by Description"
													data-control-type="textbox" data-control-name="desc-filter"
													data-control-action="filter" class="form-control" />
											</div>
										</div>
									</div>
									<div class="box text-shadow">
										<table class="demo-tbl col-md-12">
											<!--<img/>-->
                                            <td class="img"><img src="images/thumbs/autumn-1.jpg" alt="" title=""/></td>
											<!--<item>1</item>-->
											{% for m in model %}
											<tr class="tbl-item">
												<!--<img/>-->
												<td class="col-md-1">{{ m.id }}</td>
												<!--<data></data>-->
												<td class="td-block col-md-10"><p class="date">{{
														m.createDate|date("m/d/Y") }}</p>
													<p class="title">{{ m.name }}</p>
													<p class="desc">{{ m.detail }}</p></td>
												<td class="col-md-1">{% if m.delFlag == 0 %} <a
													class="label label-sm label-success"
													href="{{ path('admin_changeProductDel', {'id': m.id }) }}">Activated</a>
													{% else %} <a class="label label-sm label-danger"
													href="{{ path('admin_changeProductDel', {'id': m.id }) }}">Disabled</a>
													{% endif %}
													<p></p> <a class="label label-sm label-info"
													href="{{ path('admin_updateProduct', {'id': m.id }) }}">Update</a>
											
											</tr>
											{% endfor %}
										</table>
									</div>
									<div class="box jplist-no-results text-shadow align-center">
										<p>No results found</p>
									</div>
									<div class="jplist-ios-button">
										<i class="fa fa-sort"></i>Actions
									</div>
									<div class="jplist-panel box panel-bottom">
										<div data-control-type="pagination" data-control-name="paging"
											data-control-action="paging"
											data-control-animate-to-top="true" class="jplist-pagination"></div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{% endblock %} {% block javascripts %} {% javascripts '@jplist_js' %}
<script src="{{ asset_url }}"></script>
{% endjavascripts %} {% endblock %}
