{% extends 'AdminBundle::admin.html.twig' %} 

{% block name %}
<div id="title-breadcrumb-option-demo" class="page-title-breadcrumb">
	<div class="page-header pull-left">
		<div class="page-title">Change Password</div>
	</div>
	<ol class="breadcrumb page-breadcrumb pull-right">
		<li><i class="fa fa-home"></i>&nbsp;<a href="{{ url('admin_homepage') }}">Home</a>&nbsp;&nbsp;<i
			class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
		<li class="hidden"><a href="#">Product-Catalog</a>&nbsp;&nbsp;<i
			class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
		<li class="active">Product-Catalog</li>
	</ol>
	<div class="clearfix"></div>
</div>
{% endblock %}

{% block body %}
<div class="col-lg-6">
	<div class="panel-body pan">
		<form action="#" class="form-horizontal">
			<div class="form-body pal">
				<div class="form-group">
					<label for="inputName" class="col-md-3 control-label"> New Password</label>
					<div class="col-md-9">
						<div class="input-icon right">
							<i class="fa fa-lock"></i> <input id="inputName" type="text"
								placeholder="" class="form-control" />
						</div>
					</div>
				</div>
				<div class="form-group">
					<label for="inputPassword" class="col-md-3 control-label"> Confirm Password</label>
					<div class="col-md-9">
						<div class="input-icon right">
							<i class="fa fa-lock"></i> <input id="inputPassword" type="text"
								placeholder="" class="form-control" />
						</div>
					</div>
				</div>
			</div>
			<div class="form-group">
					<div class="col-md-offset-4 col-md-6">
						<button type="submit" class="btn btn-primary">Change Password</button>
					</div>
			</div>
		</form>
	</div>
</div>
{% endblock %}

